extends ../layout/base

block intro
	.page-header
		h1 Manage

block content
	.keystone-lists
		if nav.flat
			each list in lists
				if (!list.get('hidden'))
					h3: a(href='/keystone/' + list.path)= list.label
		else
			each navSection in nav.sections
				.nav-section
					//- h4= navSection.label
					ul.dashboard: each list in navSection.lists
						if navSection.label == 'Posts'
							if list.label == 'Posts'
								li.dash-posts: a(href='/keystone/' + list.path)= list.label
						if navSection.label == 'Galleries'
							if list.label == 'Galleries'
								li.dash-galleries: a(href='/keystone/' + list.path)= list.label
						if navSection.label == 'Enquiries'
							li.dash-enquiries: a(href='/keystone/' + list.path)= list.label
						if navSection.label == 'Ns'
							li.dash-users: a(href='/keystone/' + list.path)= list.label
			if orphanedLists.length
				.nav-section
					h4 Other
					ul: each list in orphanedLists
						li: a(href='/keystone/' + list.path)= list.label
